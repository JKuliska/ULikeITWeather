<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/layout_click_state">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/view_listview_margin"
            android:clickable="true"
            android:id="@+id/lyt_forecast1">

            <include
                layout="@layout/layout_forecast_day"
                android:id="@+id/lyt_day1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/view_listview_margin"
            android:clickable="true"
            android:id="@+id/lyt_forecast2">

            <include
                layout="@layout/layout_forecast_day"
                android:id="@+id/lyt_day2"/>
        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/view_listview_margin"
            android:clickable="true"
            android:id="@+id/lyt_forecast3">

            <include
                layout="@layout/layout_forecast_day"
                android:id="@+id/lyt_day3" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/view_listview_margin"
            android:clickable="true"
            android:id="@+id/lyt_forecast4">

            <include
                layout="@layout/layout_forecast_day"
                android:id="@+id/lyt_day4"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>